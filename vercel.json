{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://portfolio-avgx.onrender.com/api/:path*"
    }
  ],



  "routes": [
    { "src": "/api/subscribe", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
